<%- include('./include/_header') %>

<main class="lyric-page">
  <div class="lyric-layout">
    <!-- 왼쪽 사이드 -->
    <aside class="lyric-sidebar">
      <h2 class="lyric-title">Lyric Ground</h2>
      <p class="lyric-desc">
        자신의 경험을 가사 형태로 기록하는 공간
      </p>
    </aside>

    <!-- 오른쪽: 작성 폼 -->
    <section class="lyric-main">
      <form action="/lyric" method="POST" class="lyric-form">
        <div class="lyric-form-row">
          <label for="title" class="lyric-form-label">제목</label>
          <input
            type="text"
            id="title"
            name="title"
            class="lyric-input lyric-input-title"
            required
          />
        </div>

        <div class="lyric-form-row">
          <label for="body" class="lyric-form-label">일기 내용</label>
          <textarea
            id="body"
            name="body"
            class="lyric-input lyric-input-body"
            rows="10"
            required
          ></textarea>
        </div>

        <div class="lyric-submit-area lyric-submit-area--right">
          <button type="submit" class="lyric-submit-btn">일기 작성하기</button>
        </div>
      </form>
    </section>
  </div>
</main>

<%- include('./include/_footer') %>
