<!-- include header -->
<%- include('./include/_header') %>
<!-- include header -->

<!-- Main-->
<main id="site-main">
  <% if (user && user.isAdmin) { %>
    <div class="button-box">
      <a href="/users" class="btn btn-light">회원 목록</a>
    </div>
  <% } %>

  <h2>WELCOME!</h2>
  <p>회원 가입 정보를 입력하세요.</p>

  <!-- 컨트롤러: router.route("/add").get(addContactForm).post(createContact) -->
  <form action="/register" method="POST" id="add-user">

    <div class="user-info">
      <div class="col-12">
        <label for="name" class="col-form-label">이름</label>
        <div>
          <input type="text" class="form-control" name="name" id="name"
                 placeholder="ENTER YOUR NAME" required autofocus>
        </div>
      </div>

      <div class="col-12">
        <label for="email" class="col-form-label">이메일</label>
        <div>
          <input type="email" class="form-control" name="email" id="email"
                 placeholder="soundground@ex.com" required>
        </div>
      </div>

      <div class="col-12">
        <label for="username" class="col-form-label">아이디</label>
        <div>
          <input type="text" class="form-control" name="username" id="username"
                 placeholder="ENTER YOUR ID" required minlength="2" maxlength="20">
        </div>
      </div>

      <div class="col-12">
        <label for="password" class="col-form-label">비밀번호</label>
        <div>
          <input type="password" class="form-control" name="password" id="password"
                 placeholder="ENTER YOUR PASSWORD" required>
        </div>
      </div>

      <div class="col-12">
        <label for="password2" class="col-form-label">비밀번호 확인</label>
        <div>
          <input type="password" class="form-control" name="password2" id="password2"
                 placeholder="ENTER YOUR PASSWORD" required>
        </div>
      </div>
      <div class="button-box">
        <button type="submit" class="user-in">회원가입</button>
      </div>
    </div>
  </form>
</main>
<!-- /Main-->

<!-- include footer -->
<%- include('./include/_footer') %>
<!-- include footer -->
